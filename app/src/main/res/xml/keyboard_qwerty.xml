<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="@dimen/key_height">

    <Row>
        <Key android:codes="1001" android:keyLabel="" android:keyEdgeFlags="left" android:keyWidth="33.33%p"/>
        <Key android:codes="1002" android:keyLabel="" android:keyEdgeFlags="left" android:keyWidth="33.33%p"/>
        <Key android:codes="1003" android:keyLabel="" android:keyEdgeFlags="left" android:keyWidth="33.33%p"/>
    </Row>

    <Row>
        <Key android:codes="1" android:keyLabel="q" android:keyEdgeFlags="left"/><!--  q -->
        <Key android:codes="2" android:keyLabel="w"/>
        <Key android:codes="3" android:keyLabel="e"/>
        <Key android:codes="4" android:keyLabel="r"/>
        <Key android:codes="5" android:keyLabel="t"/>
        <Key android:codes="6" android:keyLabel="y"/>
        <Key android:codes="7" android:keyLabel="u"/>
        <Key android:codes="8" android:keyLabel="i"/>
        <Key android:codes="9" android:keyLabel="o"/>
        <Key android:codes="10" android:keyLabel="p" android:keyEdgeFlags="right"/>
    </Row>
    
    <Row>
        <Key android:codes="11" android:horizontalGap="5%p"
                android:keyEdgeFlags="left" android:keyLabel="a"/>
        <Key android:codes="12" android:keyLabel="s"/>
        <Key android:codes="13" android:keyLabel="d" />
        <Key android:codes="14" android:keyLabel="f" />
        <Key android:codes="15" android:keyLabel="g" />
        <Key android:codes="16" android:keyLabel="h" />
        <Key android:codes="17" android:keyLabel="j" />
        <Key android:codes="18" android:keyLabel="k" />
        <Key android:codes="19" android:keyLabel="l" android:keyEdgeFlags="right"/>
    </Row>
    
    <Row>
        <Key android:codes="-1" android:keyEdgeFlags="left"
                android:keyWidth="15%p" />
        <Key android:codes="20" android:keyLabel="z"/>
        <Key android:codes="21" android:keyLabel="x"/>
        <Key android:codes="22" android:keyLabel="c"/>
        <Key android:codes="23" android:keyLabel="v"/>
        <Key android:codes="24" android:keyLabel="b"/>
        <Key android:codes="25" android:keyLabel="n"/>
        <Key android:codes="26" android:keyLabel="m" />
        <Key android:codes="-5" android:keyWidth="15%p" android:keyEdgeFlags="right" android:isRepeatable="true" android:keyIcon="@drawable/sym_keyboard_delete" android:focusable="true" android:focusableInTouchMode="true"/><!-- backspace -->
    </Row>
    
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-3" 
                android:keyWidth="20%p" android:keyEdgeFlags="left"/>
        <Key android:codes="-2" android:keyWidth="15%p"/>
        <Key android:codes="32" android:keyIcon="@drawable/sym_keyboard_space" 
                android:keyWidth="30%p" android:isRepeatable="true"/>
        <Key android:codes="46,44"
                android:keyWidth="15%p"/>
        <Key android:codes="111" android:keyIcon="@drawable/sym_keyboard_return" 
                android:keyWidth="20%p" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>